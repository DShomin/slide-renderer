{
  "$defs": {
    "ImageItem": {
      "description": "Image item component.",
      "properties": {
        "url": {
          "description": "Image URL or Figure ID",
          "maxLength": 500,
          "title": "Url",
          "type": "string"
        },
        "alt_text": {
          "description": "Alt text for accessibility",
          "maxLength": 200,
          "title": "Alt Text",
          "type": "string"
        }
      },
      "required": [
        "url",
        "alt_text"
      ],
      "title": "ImageItem",
      "type": "object"
    },
    "ListItem": {
      "description": "List item component.",
      "properties": {
        "title": {
          "maxLength": 100,
          "title": "Title",
          "type": "string"
        },
        "description": {
          "maxLength": 300,
          "title": "Description",
          "type": "string"
        }
      },
      "required": [
        "title",
        "description"
      ],
      "title": "ListItem",
      "type": "object"
    },
    "SlideType": {
      "description": "Available slide types (all 14 types from templates).",
      "enum": [
        "title_slide",
        "section_title",
        "single_content_with_image",
        "highlight",
        "two_column_list",
        "vertical_list",
        "horizontal_3_column_list",
        "two_columns_with_grid",
        "horizontal_4_column_list",
        "image_with_description_2",
        "image_with_description_3",
        "three_column_metrics",
        "metrics_grid",
        "quote"
      ],
      "title": "SlideType",
      "type": "string"
    }
  },
  "description": "Image with description (2 images) content.",
  "properties": {
    "type": {
      "$ref": "#/$defs/SlideType",
      "description": "Must be 'image_with_description_2'"
    },
    "title": {
      "maxLength": 60,
      "title": "Title",
      "type": "string"
    },
    "images": {
      "items": {
        "$ref": "#/$defs/ImageItem"
      },
      "maxItems": 2,
      "minItems": 2,
      "title": "Images",
      "type": "array"
    },
    "items": {
      "items": {
        "$ref": "#/$defs/ListItem"
      },
      "maxItems": 2,
      "minItems": 2,
      "title": "Items",
      "type": "array"
    }
  },
  "required": [
    "type",
    "title",
    "images",
    "items"
  ],
  "title": "ImageWithDescription2Content",
  "type": "object"
}