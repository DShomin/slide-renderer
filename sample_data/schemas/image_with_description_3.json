    "title": {
      "description": "Slide title",
      "maxLength": 60,
      "title": "Title",
      "type": "string"
    },
    "images": {
      "description": "Exactly 3 images",
      "items": {
        "$ref": "#/$defs/ImageItem"
      },
      "maxItems": 3,
      "minItems": 3,
      "title": "Images",
      "type": "array"
    },
    "items": {
      "description": "Exactly 3 text descriptions matching images",
